<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.kbv.xpm</groupId>
	<artifactId>xpmJavaVersionCheck</artifactId>
	<version>1.0.2</version>
	<name>xpmJavaVersionCheck</name>
	<description>Prueft ob die Verwendete Java Version kleiner 17 ist. Dann Returncode 1. Sonst 0. Kompiliert mit 11.</description>
	<properties>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<!-- Build an executable JAR -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.0</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>de.kbv.VersionCheck</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>libs-release-local</id>
			<url>http://jfrog.kbv.de/libs-release-local</url>
		</repository>
		<snapshotRepository>
			<id>libs-snapshot-local</id>
			<url>http://jfrog.kbv.de/libs-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<url>https://bitbucket.kbv.de/scm/itasw/xpm-java-versioncheck.git</url>
		<connection>scm:git:https://bitbucket.kbv.de/scm/itasw/xpm-java-versioncheck.git</connection>
		<developerConnection>scm:git:https://bitbucket.kbv.de/scm/itasw/xpm-java-versioncheck.git</developerConnection>
	</scm>
</project>