<?xml version="1.0" encoding="ISO-8859-1"?>
<konfiguration>
    <grundeinstellung>
    	<!-- Installationsverzeichnis -->
    	<pruefpfad>./</pruefpfad>
    	<!-- Verzeichnis mit Pruefdateien -->
    	<pruefdaten>Daten/</pruefdaten>
    	<!-- Verzeichnis mit fehlerfrei geprüften Pruefdateien.
    	   - Nach einer Prüfung, die nicht abgelehnt wurde, werden die XML-Dateien
           - in dieses Verzeichnis verschoben -->
    	<okdaten>Geprueft/NichtAbgelehnt/</okdaten>
    	<!-- Verzeichnis mit abgelehnten Pruefdateien.
    	   - Nach einer Prüfung, die mit dem Status 'Abbruch' bzw. 'Abgelehnt' beendet wurde,
           - werden die XML-Dateien in dieses Verzeichnis verschoben -->
    	<fehlerdaten>Geprueft/Abgelehnt/</fehlerdaten>
		<!-- Protokolldatei -->
		<log_datei>Listen/XPM_Logfile.log</log_datei>
    	<!-- Dateifilter für die Menge der zu prüfenden Dateien -->
    	<datei_filter>*.LDT</datei_filter>
		<!-- Dateifilter für die Menge der zu prüfenden PDF Dateien -->
    	<pdf_datei_filter>*.PDF</pdf_datei_filter>
    	<!-- Schalter Warnungen mit protokollieren: ja/nein -->
    	<warnungen>ja</warnungen>
    	<!-- Schalter Fehlerausgabe aller Fehlermeldungen auf einen vorgegebenen
    	   - maximalen Wert begrenzen: ja/nein -->
    	<fehler_begrenzen>ja</fehler_begrenzen>
        <!-- Pfad zum Benutzerhandbuch -->
        <dokumentation>Doku/KBV_ITA_AHEX_Handbuch_Pruefmodul_LDK_KV.pdf</dokumentation>
    </grundeinstellung>
	<!-- Steuertabellen und Stammdateien -->
	<eingabedateien>
		<!-- Pfad zu LDT Steuertabelle -->
        <kbv_tabelle>Bin/ldk_tabelle.bin</kbv_tabelle>
	</eingabedateien>
	<!-- Ausgabedateien des Prüfmoduls -->
	<ausgabedateien>
		<!-- Fehlerprotokoll -->
		<FehlerListe Format="PDF">Listen/Protokoll.pdf</FehlerListe>
		<!-- Fehlerstatistik -->
		<StatistikListe Format="PDF">Listen/FehlerStatistik.pdf</StatistikListe>
	</ausgabedateien>
	<schalter>
	</schalter>
</konfiguration>
