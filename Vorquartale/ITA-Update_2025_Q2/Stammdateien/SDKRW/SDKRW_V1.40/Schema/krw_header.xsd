<?xml version="1.0" encoding="ISO-8859-15"?>
<xs:schema xmlns="urn:ehd/001" xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="urn:ehd/001" elementFormDefault="qualified" attributeFormDefault="unqualified" blockDefault="substitution">
	<!-- ======================================================================= 
  Einbinden der ehd-Bibliotheken
  ======================================================================= -->
	<xs:include schemaLocation="ehd_header_V1.40.xsd"/>
	<!-- ======================================================================= 
  angepasster ehd_header: krw_header (mini-header, besteht aus nur wenigen Elementen)
  ======================================================================= -->
	<xs:complexType name="krw_header_typ">
		<xs:complexContent>
			<xs:restriction base="ehd_header_typ">
				<xs:annotation>
					<xs:documentation>service_tmr enthält das Gültigkeitsquartal, 
            origination_dttm enthält das Erstellungsdatum</xs:documentation>
				</xs:annotation>
				<xs:sequence>
					<xs:element ref="id"/>
					<xs:element ref="version_nbr"/>
					<xs:element name="document_type_cd" type="krw_document_type_cd_typ"/>
					<xs:element ref="service_tmr"/>
					<xs:element ref="origination_dttm"/>
					<xs:element ref="provider" maxOccurs="unbounded"/>
					<xs:element name="interface" type="krw_interface_typ"/>
				</xs:sequence>
			</xs:restriction>
		</xs:complexContent>
	</xs:complexType>
	<!-- ======================================================================= 
  angepasster krw_document_type_cd_typ  für das Projekt: krw
  ======================================================================= -->
	<xs:complexType name="krw_document_type_cd_typ">
		<xs:complexContent>
			<xs:restriction base="document_type_cd_typ">
				<xs:attribute name="V" use="required">
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:enumeration value="krw"/>
							<xs:enumeration value="KRW"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:attribute>
			</xs:restriction>
		</xs:complexContent>
	</xs:complexType>
	<!-- ======================================================================= 
  angepasster krw_interface_typ für das Projekt: krw
  ======================================================================= -->
	<xs:complexType name="krw_interface_typ">
		<xs:complexContent>
			<xs:restriction base="interface_typ">
				<xs:annotation>
					<xs:documentation>
               id:
                 'KRW' ist eindeutiger Schlüssel für die KRW-Stammdatei
               interface.nm:
                 Grundlage der KRW-Stammdatei der KBV; Fassung (Quelle), die dieser Stammdatei zugrunde liegt
               version: Version der Datensatzbeschreibung für die KRW-Stammdatei
            </xs:documentation>
				</xs:annotation>
				<xs:sequence>
					<xs:element name="id">
						<xs:complexType>
							<xs:complexContent>
								<xs:restriction base="interface_id_typ">
									<xs:attribute name="EX" use="required">
										<xs:simpleType>
											<xs:restriction base="xs:string">
												<xs:enumeration value="SDKRW"/>
											</xs:restriction>
										</xs:simpleType>
									</xs:attribute>
								</xs:restriction>
							</xs:complexContent>
						</xs:complexType>
					</xs:element>
					<xs:element name="interface.nm">
						<xs:complexType>
							<xs:complexContent>
								<xs:restriction base="interface_nm_typ">
									<xs:attribute name="V" use="required">
										<xs:simpleType>
											<xs:restriction base="xs:string">
												<xs:enumeration value="Kodierregelwerk-Stammdatei"/>
											</xs:restriction>
										</xs:simpleType>
									</xs:attribute>
								</xs:restriction>
							</xs:complexContent>
						</xs:complexType>
					</xs:element>
					<xs:element name="version">
						<xs:complexType>
							<xs:complexContent>
								<xs:restriction base="interface_version_typ">
									<xs:attribute name="V" use="required">
										<xs:simpleType>
											<xs:restriction base="xs:string">
												<xs:enumeration value="1.40"/>
											</xs:restriction>
										</xs:simpleType>
									</xs:attribute>
								</xs:restriction>
							</xs:complexContent>
						</xs:complexType>
					</xs:element>
					<xs:element name="description">
						<xs:complexType>
							<xs:complexContent>
								<xs:restriction base="description_typ">
									<xs:attribute name="V" use="required">
										<xs:simpleType>
											<xs:restriction base="xs:string">
												<xs:enumeration value="KRW, KBV xml-Stammdatei - COPYRIGHT-HINWEIS: Diese Datei wird den Softwarehäusern, die Arztpraxissoftware herstellen, sowie den Kassenärztlichen Vereinigungen vom Dezernat 6 der KBV ausschließlich zur Nutzung in der vertragsärztlichen Versorgung zur Verfügung gestellt. Für alle sonstigen Nutzungszwecke wende man sich an das Dezernat 6 der KBV bzw. den Bearbeiter."/>
											</xs:restriction>
										</xs:simpleType>
									</xs:attribute>
									<xs:attribute name="URL" type="xs:anyURI" use="optional"/>
								</xs:restriction>
							</xs:complexContent>
						</xs:complexType>
					</xs:element>
				</xs:sequence>
			</xs:restriction>
		</xs:complexContent>
	</xs:complexType>
</xs:schema>
