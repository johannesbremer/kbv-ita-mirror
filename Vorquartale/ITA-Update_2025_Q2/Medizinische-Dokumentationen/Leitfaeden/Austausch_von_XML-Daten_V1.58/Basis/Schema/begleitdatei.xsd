<schema xmlns:bgl="http://www.kbv.de/ns/meta/2003-05-15" xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.kbv.de/ns/meta/2003-05-15" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<element name="begleitdatei">
		<complexType>
			<sequence>
				<element name="erstellungsdatum-datei">
					<complexType>
						<attribute name="V" type="date" use="required"/>
					</complexType>
				</element>
				<element name="empfaenger">
					<complexType>
						<choice>
							<element name="ukv">
								<complexType>
									<attribute name="EX" type="bgl:ukvnummer-typ" use="required"/>
									<attribute name="RT" fixed="UKV-Nummer"/>
								</complexType>
							</element>
							<element name="datenstelle">
								<complexType>
									<attribute name="EX" type="bgl:institutskennzeichen-typ" use="required"/>
									<attribute name="RT" fixed="Institutskennzeichen"/>
								</complexType>
							</element>
						</choice>
					</complexType>
				</element>
				<element name="absender">
					<complexType>
						<choice>
							<element name="arzt">
								<complexType>
									<attribute name="EX" type="bgl:betriebsstaettennummer-typ" use="required"/>
									<attribute name="RT" fixed="BSNR"/>
								</complexType>
							</element>
							<element name="krankenhaus">
								<complexType>
									<attribute name="EX" type="bgl:institutskennzeichen-typ" use="required"/>
									<attribute name="RT" fixed="Krankenhaus-IK"/>
								</complexType>
							</element>
							<element name="kv">
								<complexType>
									<attribute name="EX" type="bgl:kvnummer-typ" use="required"/>
									<attribute name="RT" fixed="KV-Nummer"/>
								</complexType>
							</element>
						</choice>
					</complexType>
				</element>
				<element name="komprimierungssoftware" type="bgl:software-typ"/>
				<element name="verschluesselungssoftware">
					<complexType>
						<sequence>
							<element name="software-name">
								<complexType>
									<attribute name="V">
										<simpleType>
											<restriction base="string">
												<enumeration value="XML-Kryptomodul"/>
												<enumeration value="XKM"/>
											</restriction>
										</simpleType>
									</attribute>
								</complexType>
							</element>
							<element name="software-version">
								<complexType>
									<attribute name="V">
										<simpleType>
											<restriction base="string">
												<pattern value="[1-9].[0-9][0-9](.[0-9])?"/>
											</restriction>
										</simpleType>
									</attribute>
								</complexType>
							</element>
							<element name="software-hersteller">
								<complexType>
									<attribute name="V" type="string" fixed="KBV"/>
								</complexType>
							</element>
						</sequence>
					</complexType>
				</element>
				<element name="archive">
					<complexType>
						<sequence>
							<element name="archiv" maxOccurs="unbounded">
								<complexType>
									<sequence>
										<element name="name">
											<complexType>
												<attribute name="V" type="string" use="required"/>
											</complexType>
										</element>
										<element name="verzeichnis">
											<complexType>
												<sequence>
													<element name="pfad">
														<complexType>
															<attribute name="V" type="bgl:pfadstring-typ" use="required"/>
														</complexType>
													</element>
													<element name="zeitraum">
														<complexType>
															<sequence>
																<element name="von">
																	<complexType>
																		<attribute name="V" type="date" use="required"/>
																	</complexType>
																</element>
																<element name="bis">
																	<complexType>
																		<attribute name="V" type="date" use="required"/>
																	</complexType>
																</element>
															</sequence>
														</complexType>
													</element>
												</sequence>
											</complexType>
										</element>
									</sequence>
								</complexType>
							</element>
						</sequence>
					</complexType>
				</element>
				<!--element name="verschluesselungssoftware" type="bgl:software-typ"/-->
			</sequence>
			<attribute name="Version">
				<simpleType>
					<restriction base="string">
						<enumeration value="1.03"/>
						<enumeration value="1.04"/>
						<enumeration value="1.05"/>
						<enumeration value="1.06"/>
						<enumeration value="1.07"/>
						<enumeration value="1.08"/>
						<enumeration value="1.09"/>
						<enumeration value="1.10"/>
						<enumeration value="1.11"/>
						<enumeration value="1.12"/>
						<enumeration value="1.13"/>
						<enumeration value="1.14"/>
						<enumeration value="1.15"/>
						<enumeration value="1.16"/>
						<enumeration value="1.17"/>
						<enumeration value="1.18"/>
						<enumeration value="1.19"/>
					</restriction>
				</simpleType>
			</attribute>
		</complexType>
	</element>
	<!-- software-typ -->
	<complexType name="software-typ">
		<sequence>
			<element name="software-name">
				<complexType>
					<attribute name="V" type="string" use="required"/>
				</complexType>
			</element>
			<element name="software-version">
				<complexType>
					<attribute name="V" type="string" use="required"/>
				</complexType>
			</element>
			<element name="software-hersteller">
				<complexType>
					<attribute name="V" type="string" use="required"/>
				</complexType>
			</element>
			<element name="software-link" minOccurs="0">
				<complexType>
					<attribute name="V" type="string" use="required"/>
				</complexType>
			</element>
		</sequence>
	</complexType>
